}

#include <iostream>


using namespace std;

int main()
{
    cout << "Hello World!" << endl;
    string str = "";
    string nom = "" ;
    for (getline (cin, str); !cin.eof (); getline (cin, str))
    {

        nom += str ;
    }
    cout << nom << endl;
}


